<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context="at.teamgotcha.tamagotchi.MainActivity">

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/top_menu_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <HorizontalScrollView
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:scrollbars = "vertical"
                    android:scrollbarStyle="insideInset">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <com.beardedhen.androidbootstrap.BootstrapButton
                            android:id="@+id/settings_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings"
                            app:bootstrapBrand="warning"
                            app:bootstrapSize="lg"
                            app:roundedCorners="true" />

                        <com.beardedhen.androidbootstrap.BootstrapButton
                            android:id="@+id/connection_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/connection"
                            app:bootstrapBrand="warning"
                            app:bootstrapSize="lg"
                            app:roundedCorners="true" />

                        <com.beardedhen.androidbootstrap.BootstrapButton
                            android:id="@+id/help_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/help"
                            app:bootstrapBrand="warning"
                            app:bootstrapSize="lg"
                            app:roundedCorners="true" />

                        <com.beardedhen.androidbootstrap.BootstrapButton
                            android:id="@+id/shop_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shop"
                            app:bootstrapBrand="warning"
                            app:bootstrapSize="lg"
                            app:roundedCorners="true" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.9">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="links" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9">
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/bootstrap_brand_primary">
                    </GridLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="rechts" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="unten" />
            </LinearLayout>
        </LinearLayout>

        <!-- menus -->
        <RelativeLayout
            android:id="@+id/settings_layout"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:elevation="@dimen/first_z_layer">

            <fragment
                android:id="@+id/settings_fragment"
                android:name="at.teamgotcha.tamagotchi.fragments.SettingsFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="@dimen/first_z_layer" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/help_layout"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:elevation="@dimen/first_z_layer">

            <fragment
                android:id="@+id/help_fragment"
                android:name="at.teamgotcha.tamagotchi.fragments.HelpFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="@dimen/first_z_layer" />
        </RelativeLayout>
    </FrameLayout>
</android.support.constraint.ConstraintLayout>
